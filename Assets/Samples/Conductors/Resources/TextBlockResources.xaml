<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cal="clr-namespace:Caliburn.Noesis">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ImageResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Style.TextBlock.Normal"
           TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamily.Default}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}" />
        <Setter Property="Foreground" Value="{cal:SolidBrush {StaticResource Color.Foreground.Normal}}" />
    </Style>

    <Style x:Key="Style.TextBlock.Small"
           BasedOn="{StaticResource Style.TextBlock.Normal}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Small}" />
    </Style>

    <Style x:Key="Style.TextBlock.Large"
           BasedOn="{StaticResource Style.TextBlock.Normal}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Large}" />
    </Style>

    <Style x:Key="Style.TextBlock.Header"
           BasedOn="{StaticResource Style.TextBlock.Normal}"
           TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Large}" />
        <Setter Property="Foreground" Value="{cal:SolidBrush {StaticResource Color.Foreground.Highlight.Normal}}" />
    </Style>

    <Style x:Key="Style.TextBlock.HeaderSmall"
           BasedOn="{StaticResource Style.TextBlock.Header}"
           TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}" />
        <Setter Property="Foreground" Value="{cal:SolidBrush {StaticResource Color.Foreground.Darker}}" />
    </Style>

    <Style x:Key="Style.TextBlock.HeaderLarge"
           BasedOn="{StaticResource Style.TextBlock.Header}"
           TargetType="TextBlock">
        <Setter Property="Foreground" Value="{cal:SolidBrush {StaticResource Color.Foreground.Highlight.Light}}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.ExtraLarge}" />
    </Style>

    <Style BasedOn="{StaticResource Style.TextBlock.Normal}"
           TargetType="TextBlock" />

</ResourceDictionary>