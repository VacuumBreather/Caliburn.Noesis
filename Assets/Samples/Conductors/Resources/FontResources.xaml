<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ColorResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <system:Double x:Key="FontSize.Small">20</system:Double>
    <system:Double x:Key="FontSize.Normal">24</system:Double>
    <system:Double x:Key="FontSize.Large">36</system:Double>
    <system:Double x:Key="FontSize.ExtraLarge">48</system:Double>

    <FontFamily x:Key="FontFamily.Default">
        pack://application:,,,../Fonts/#Nosferatu
    </FontFamily>

</ResourceDictionary>